# --- Application
PORT=4000
NODE_ENV=production
FE_URL=https://blow.ru
CORS_ORIGINS=https://blow.ru,https://www.blow.ru,https://admin.blow.ru,https://api.blow.ru
EMAIL_FROM="Blow" <no-reply@blow.ru>
STATIC_PREFIX=/static/images

# --- Database (поменяйте логин/пароль на значения из корневого .env)
MONGODB_URI=mongodb://root:example@mongo:27017/blow?authSource=admin

# --- Mail transport
MAIL_HOST=smtp.timeweb.ru
MAIL_PORT=587
MAIL_SECURE=false
MAIL_REQUIRE_TLS=true
MAIL_USER=support@blow.ru
MAIL_PASS=change-me
MAIL_FROM="Blow" <support@blow.ru>
MAIL_CONNECTION_TIMEOUT=10000

# --- Yoomoney
YOOMONEY_CLIENT_ID=
YOOMONEY_CLIENT_SECRET=
YOOMONEY_REDIRECT_URI=https://api.blow.ru/api/yoomoney/callback
YOOMONEY_RECEIVER=
YOOMONEY_NOTIFICATION_SECRET=

# --- Other integrations
TBANK_TERMINAL_KEY=
TBANK_PASSWORD=
